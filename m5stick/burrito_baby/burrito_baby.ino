void drawImage() {
  if (flipped)
    spriteFlipped.pushSprite(&M5.Display, imgX, imgY);
  else
    spriteNormal.pushSprite(&M5.Display, imgX, imgY);
}

void setup() {
  M5.begin();
  M5.Display.fillScreen(TFT_DARKGREEN);

  float scale = (float)M5.Display.height() / 36.0f;
  int imgW = 16 * scale;
  int imgH = 36 * scale;
  imgX = (M5.Display.width() - imgW) / 2;
  imgY = (M5.Display.height() - imgH) / 2;

  spriteNormal.setPsram(false);
  spriteNormal.setColorDepth(16);
  spriteNormal.createSprite(imgW, imgH);
  spriteNormal.fillSprite(TFT_DARKGREEN);
  spriteNormal.drawPng(png, sizeof(png), 0, 0, imgW, imgH, 0, 0, scale, scale);

  spriteFlipped.setPsram(false);
  spriteFlipped.setColorDepth(16);
  spriteFlipped.createSprite(imgW, imgH);
  spriteFlipped.fillSprite(TFT_DARKGREEN);
  for (int i = 0; i < imgW; i++) {
    for (int j = 0; j < imgH; j++) {
      spriteFlipped.drawPixel(imgW - 1 - i, j, spriteNormal.readPixel(i, j));
    }
  }

  drawImage();
}

void loop() {
  M5.update();
  if (M5.BtnA.wasPressed()) {
    flipped = !flipped;
    drawImage();
  }
  float ax, ay, az;
  M5.Imu.getAccelData(&ax, &ay, &az);
  bool newFlipped = flipped;
  if (ax < -0.2) newFlipped = false;
  else if (ax > 0.2) newFlipped = true;
  if (newFlipped != flipped) {
    flipped = newFlipped;
    drawImage();
  }
}
